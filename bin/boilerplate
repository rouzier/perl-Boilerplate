#!/usr/bin/perl

=head1 NAME

boilerplate - script for creating boilerplate code

=head1 SYNOPSIS

To create boilerplate from a bundle

    boilerplate BundleName [BUNDLE OPTIONS]

To list available bundles

    boilerplate --list

To create a boilerplate bundle from some files

    boilerplate --create FILE1 ...

Options

 -l --list      List available bundles
 -c --create    List available bundles
 -h --help      This help message

=cut

use strict;
use warnings;
use Getopt::Long qw(:config require_order);
use Boilerplate;
use Pod::Usage qw(pod2usage);
use Module::Load;
our %options;

GetOptions(\%options,"help|h","list|l","create|c") or pod2usage(2);
pod2usage(1) if $options{help};
my $boilerplate = Boilerplate->new;

if ($options{list} ) {
    exit $boilerplate->list_bundles();
}

if ($options{create}) {
    exit $boilerplate->create_bundle_from_files(@ARGV);
}

unless (@ARGV) {
    pod2usage({ -msg => "No bundle provided", -exitval => 2 });
}

exit $boilerplate->create_boilerplate(@ARGV);


