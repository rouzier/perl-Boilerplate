#!/usr/bin/perl

=head1 NAME

boilerplate - script creating boilerplate code

=head1 SYNOPSIS

boilerplate

 -h --help      This help message

=cut

use Getopt::Long;
use Pod::Usage qw(pod2usage);
our %options;

GetOptions(\%options,"help|h") or pod2usage(2);
pod2usage(1) if $options{help};


